@model DeveloperModel
<div class="row justify-content-center">
    <div class="col-md-8">
        <form asp-controller="Developer" asp-action="Create" onsubmit="return postQuery(this);" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label"></label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PositionId" class="control-label"></label>
                <select asp-for="PositionId" class="form-control" asp-items="@ViewBag.Positions"></select>
                <span asp-validation-for="PositionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Створити" class="btn btn-primary" />
            </div>
            <div>
                <a class="btn btn-sm btn-primary text-white" onclick="getRequest('@Url.Action("Index", "Developer", null, Context.Request.Scheme)')">Назад</a>
            </div>
        </form>
    </div>
</div>

