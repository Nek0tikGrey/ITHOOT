@model IEnumerable<PositionModel>

<div>
    <a class="btn btn-primary text-decoration-none pointer text-white" onclick="getRequest('@Url.Action("Create", "Position", null, Context.Request.Scheme)')">Додати</a>
</div>
@foreach (PositionModel item in Model)
{
    <div class="d-flex flex-column bg-light m-2 justify-content-around">
        <div class="d-flex justify-content-between">
            <div class="d-flex">
                <p class="p-1">@Html.DisplayNameFor(model => model.Id)</p>
                <p class="p-1">@Html.DisplayFor(model => item.Id)</p>
            </div>
            <div class="d-flex">
                <p class="p-1">@Html.DisplayNameFor(model => model.Name)</p>
                <p class="p-1">@Html.DisplayFor(model => item.Name)</p>
            </div>
        </div>
        <div class="d-flex">
            <a class="btn btn-primary text-decoration-none pointer text-white" onclick="getRequest('@Url.Action("Edit", "Position", new { id = item.Id }, Context.Request.Scheme)')">Редагувати</a> |
            <form asp-action="Delete" asp-route-id="@item.Id" onsubmit="return jQueryAjaxDelete(this);">
                <input class="btn btn-danger" type="submit" value="Видалити" />
            </form>
        </div>
    </div>
}
